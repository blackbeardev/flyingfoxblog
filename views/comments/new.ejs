<% include ../partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Add a new comment to <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%=blog._id%>/comments" method="POST">
        <div class="field">
            <label>Author</label>
            <input  type="text" name="comment[author]" placeholder="Author">
        </div>
        <div class="field">
            <label>Comment</label>
            <input type="text" name="comment[text]" placeholder="Comment">
        </div>
        
        <div class="field">
            <input class="ui blue inverted big button" type="submit" value="Submit">
        </div>
    </form>
</div>


<% include ../partials/footer %>